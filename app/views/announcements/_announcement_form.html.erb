<%= form_for(@society.announcements.build) do |f| %>
  <% if f.object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(f.object.errors.count, "error") %>.
    </div>
    <ul>
      <% f.object.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%= f.hidden_field :society_id %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Add new announcement...", minlength: 1, class: "form-announcement-description" %>
  </div>
  <%= f.submit "Add announcement", class: "btn btn-large btn-primary pull-middle" %>
<% end %>