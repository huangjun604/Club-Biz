<h1>Editing society</h1>

<%= form_for(@society, :html => {:multipart => true}) do |f| %>
  <% if @society.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@society.errors.count, "error") %> prohibited this society from being saved:</h2>

      <ul>
      <% @society.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :s_name, "Society Name" %><br>
    <%= f.text_field :s_name %>
  </div>
  <div class="field">
    <%= f.label :website, "Society Website" %><br>
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :regnum, "Registration Number" %><br>
    <%= f.text_field :regnum %>
  </div>
  <div class="field">
    <%= f.label :catalogue, "Society Type" %><br>
    <%= f.text_field :catalogue %>
  </div>
  <div class="field">
    <%= f.label :description, "Society Description" %><br>
    <%= f.text_area :description, placeholder: "Introduce your society..." %>
  </div>
  <div class="field">
  	<%= f.label :logo, "Society Logo" %><br>
  	<%= f.file_field :logo %>
  </div>
  <%= f.submit "Update the society", class: "btn btn-large btn-primary" %>
<% end %>

<%= link_to 'Back', @society, class: "btn btn-large btn-primary" %>
